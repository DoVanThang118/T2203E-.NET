@{
    ViewData["Title"] = "Index";
    var product = ViewBag.Products;

}
<div class="text-center">
    <h1 class="display-4">Product</h1>
</div>
<div>
    <table class="table">
        <thead>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Thumbnail</th>
            <th>Action</th>
        </thead>
        <tbody>
            @foreach(var p in product)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Name</td>
                    <td>@p.Price</td>
                    <td>@p.Thumbnail</td>
                    <td><a href="~/Product/Edit/@p.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
